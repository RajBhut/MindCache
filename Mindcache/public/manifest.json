{
  "manifest_version": 3,
  "name": "MindCache - Web Interaction Tracker",
  "version": "1.0.0",
  "description": "Store and summarize your web browser interactions",
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "scripting",
    "history",
    "unlimitedStorage"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "content-fixes.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "MindCache"
  },

  "web_accessible_resources": [
    {
      "resources": ["*.js", "*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
